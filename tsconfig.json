{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
  },
  "include": [
    "./src",
    "./api"
  ],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {
    "esm": true
  },
}
